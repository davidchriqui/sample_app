<h1>Modifier mes informations</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
      <%= f.label :firstname, "PrÃ©nom" %>

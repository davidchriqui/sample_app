<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 52 %>
      <%= link_to "#{user.firstname} #{user.lastname.first}.", user %>
    <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "Supprimer cet utilisateur", user, method: :delete,
                                  data: { confirm: "Etes-vous sur?" } %>
  <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>